<div class="span-22">
  <div class="input_box">  
    <div class="breadcrumb"> Corporate Registrations </div>
    <div class="inner_box">

      <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="span-22">
          <span class="span-3"><%= f.label :Company %></span>
          <span class="span-6">
            <%= collection_select('user', 'company_ids', Company.find(:all, :order => 'id'), :id, :name, {}, {:multiple => false, :name => 'user[company_ids][]' } ) %>
          </span>
          <span class="span-3"><%= f.label :passcode %></span>
          <span class="span-4"><%= f.password_field :passcode %></span>
        </div>
        <div class="span-22">
          <span class="span-3"><%= f.label :email %></span>
          <span class="span-6"><%= f.text_field :email %></span>
          <span class="span-3"><%= f.label :username %></span>
          <span class="span-4"><%= f.text_field :username %></span>
        </div>  
        <div class="span-22">
          <span class="span-3"> <%= f.label :password %></span>
          <span class="span-6"><%= f.password_field :password %></span>
          <span class="span-3"><%= f.label :password_confirmation %></span>
          <span class="span-4"><%= f.password_field :password_confirmation %></span>
        </div>
        <%= f.hidden_field :ksu, :value => :pk %>
        
        

        <p><%= f.submit "Register" %></p>
        
      <% end %>

  <%= render :partial => "devise/shared/links" %>
    </div>
  </div>  
</div>